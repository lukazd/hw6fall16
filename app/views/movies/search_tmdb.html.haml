-#  This file is app/views/movies/search_tmdb.html.haml
%h1= "The following movies containing #{@search_terms} were found on TMDb"

= form_tag movies_add_tmdb_path, :method => :post do
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Select
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie[:title]
          %td= movie[:rating]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]", movie[:tmdb_id], false, :id => "checkbox_#{movie[:tmdb_id]}"
  = submit_tag 'Add Movies', :id => 'movies_button'


= link_to 'Add new movie', new_movie_path